extends layout

block content
  .main.container
    nav.navbar.navbar-light.main-nav
    .container
      ul.nav.navbar-nav
        li.nav-item.active
          a.nav-link(href='#/') home
            span.sr-only (current)
        li.nav-item(data-target='#categories')
          a.nav-link(href='#/categories') search pets
        li.nav-item(data-target='#categories')
          a.nav-link(href='users') Log in
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Add Pets

        // register form
        form(method='POST' action='/addpets')
          div.form-group
            label(for='animal')
            input#pet.form-control(placeholder='Animal' name='animal')
          div.form-group
            label(for='size')
            input#pet.form-control(placeholder='Size' name='size')
          div.form-group
            label(for='mood')
            input#pet.form-control(placeholder='Mood' name='mood')
          button.btn.btn-primary(type='submit') Add Pet

