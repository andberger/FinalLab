extends layout

block content
  .main.container
    nav.navbar.navbar-light.main-nav
    .container
      ul.nav.navbar-nav
        li.nav-item.active
          a.nav-link(href='#/') home
            span.sr-only (current)
        li.nav-item(data-target='#categories')
          a.nav-link(href='#/categories') search pets
        li.nav-item(data-target='#categories')
          a.nav-link(href='users') Log in
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Login

        // register form
        form(method='POST' action='/users')
          div.form-group
            label(for='username')
            input#pet.form-control(placeholder='Username' name='username')
          div.form-group
            label(for='password')
            input#pet.form-control(type='password' placeholder='Password' name='password')
          button.btn.btn-primary(type='submit') Login

