extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Search Pet Store

        // register form
        form(method='POST' action='/')
          div.form-group
            label(for='pet')
            input#pet.form-control(type='text', placeholder='search for pets' name='pet')
          button.btn.btn-primary(type='submit') Search

        h1.display-4.m-b-2 Results
        table
          tbody
              tr
                th Animal
                th Size
                th Behaviour
                if animals
                  for animal in animals
                    tr
                      td= animal[0]
                      td= animal[1]
                      td= animal[2]
                else
                  tr
                    td
                    td
                    td
