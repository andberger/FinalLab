extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Search Pet Store

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='pets')
            input#pets.form-control(type='text', placeholder='search for pets' name='pets')
          button.btn.btn-primary(type='submit') Search
